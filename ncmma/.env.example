# Discord Webhook URL
DISCORD_WEBHOOK_URL=""

# CMMA API エンドポイント
CMMA_VOLATILITY_API_URL="https://stg.api.1btc.love/volatility"

# --- API クエリパラメータ ---
# 分析対象の時間足 (例: 1m, 5m, 1h, 4h, 1d)
TIMEFRAME="4h"
# 価格変動の閾値（パーセンテージ、例: 5.0で5%）
THRESHOLD="5.0"
# 何本前のローソク足と比較するか (例: 1で1本前のローソク足と比較)
OFFSET="1"
# 変動方向 ('up': 上昇, 'down': 下落, 'both': 両方)
DIRECTION="up"
# ソート順 ('volatility_desc': 変動率降順, 'volatility_asc': 変動率昇順, 'symbol_asc': シンボル名昇順)
SORT="volatility_desc"
# APIから取得する最大結果数
LIMIT="100"

# --- 通知設定 ---
# 1つのDiscordメッセージで送信する最大通知数
MAX_NOTIFICATIONS="20"
# 同一トークン/変動範囲に対して再通知を行うまでの待機時間（分）
RENOTIFY_BUFFER_MINUTES="240"
# チェックサイクル間の間隔（秒）
CHECK_INTERVAL_SECONDS="300"

# --- 出来高フィルター設定 (オプショナル) ---
# 出来高の閾値（この値より大きい出来高を持つ銘柄のみ通知される。0または未設定の場合は無効）
VOLUME_THRESHOLD="1000000.0"
# 出来高取得APIのエンドポイント
CMMA_VOLUME_API_URL="https://stg.api.1btc.love/volume"


# --- ログ設定 ---
# クリーンアップが実行されるログディレクトリの最大サイズ（MB）
LOG_MAX_SIZE_MB="10"